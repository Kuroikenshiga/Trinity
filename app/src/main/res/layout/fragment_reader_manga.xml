    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.ramotion.fluidslider.FluidSlider
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:alpha="0.1"
        android:visibility="gone"
        app:bar_color="?attr/colorPrimary"
        app:bar_text_color="?attr/colorSecondary"
        app:bubble_color="?attr/colorSecondary"
        app:bubble_text_color="?attr/colorTertiary"
        app:duration="500"
        app:initial_position=".0"
        app:layout_constraintBottom_toTopOf="@+id/numPages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:size="small" />

    <ImageView
        android:id="@+id/prevChap"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.1"
        android:src="@drawable/back"
        app:layout_constraintBottom_toTopOf="@+id/numPages"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="?attr/colorPrimary" />

    <ImageView
        android:id="@+id/nextChap"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.1"
        android:scaleX="-1"
        android:scaleY="-1"
        android:src="@drawable/back"
        app:layout_constraintBottom_toTopOf="@+id/numPages"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/numPages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:textColor="?attr/colorTertiary"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/animationContainer"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/animation_shape_dual"
            android:backgroundTint="?attr/colorTertiary"

            />

        <View
            android:id="@+id/right"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/animation_shape_dual"
            android:backgroundTint="?attr/colorPrimary" />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentToMotion"
        android:name="com.example.trinity.fragments.ReaderConfigsFragment"
        android:layout_width="match_parent"
        android:background="@drawable/dialog_shape"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout="@layout/fragment_reader_configs"

        />

</androidx.constraintlayout.widget.ConstraintLayout>